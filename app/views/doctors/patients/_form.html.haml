= form_for(@patient, :url => doctor_patients_path) do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2
        = pluralize(@patient.errors.count, "error")
        prohibited this patient from being saved:
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :age
    = f.text_field :age
  Additional Settings
  .field
    = f.label :insulin_time
    = f.text_field :insulin_time

  %br
  %table
    %tr
      %td Category
      %td Time
      %td Value
  = f.fields_for :time_settings do |builder|
    = render 'time_settings_fields', f: builder
  %br
  = link_to_add_field 'Add new setting', f, :time_settings

  .actions
    = f.submit
