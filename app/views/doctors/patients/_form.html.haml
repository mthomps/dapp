= form_for(@patient, :url => doctor_patients_path) do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2
        = pluralize(@patient.errors.count, "error")
        prohibited this patient from being saved:
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :age
    = f.text_field :age

  / = f.fields_for :time_settings do |builder|
  /   %fieldset
  /     = builder.label :content, "time"
  /     = builder.time_field, :content

  .actions
    = f.submit
